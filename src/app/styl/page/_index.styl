.way1
	margin 0 auto
	max-width 1280px
	width 100%
	padding 92px 100px 0 100px
.way_wrap
	padding 0 90px 0 90px
	position relative
.way-without
	display flex
	justify-content space-between
	p
		font-size 30px
		line-height 1
		color #202020
		b
			font-family 'openSansBold'
	span
		font-family 'PTMono'
		font-size 60px
		color #ededed
.path
	font-size 16px
	color #202020
	line-height 0.8
	padding-bottom 20px
.settings
	position absolute
	writing-mode vertical-lr
	line-height .5
	left 0
	top 0
	transform rotate(180deg)
	font-family 'openSansBold'
	font-size 48px
	color #ededed
.inp_wrap
	display flex
	justify-content space-between
	flex-wrap wrap
	margin-bottom 55px
.inp_item
	max-width 270px
	width 100%
	position relative
	span
		font-family 'PTMono'
		color #043493
		font-size 14px
		line-height 21px
		display block
	input
		width 100%
		border none
		font-family 'openSansRegular'
		background-color #f7f7f7
		font-size 16px
		line-height 21px
		color #c4c4c4
	&:after
		content ''
		position absolute
		width 100%
		border-bottom 1px solid #dcdcdc
		left 0
		bottom -15px
	&:before
		content ''
		position absolute
		z-index 2
		width 0
		border-bottom 1px solid #043493
		left 0
		bottom -15px
		transition width 0.4s ease
.inp_item input::placeholder
	color #c4c4c4
	font-family 'openSansRegular'
	font-size 16px
	opacity 1
	transition opacity 0.6s ease
.inp_item input:focus::placeholder
	opacity 0
	transition opacity 0.6s ease
.inp_item:focus-within::before
	width 100%
	transition width 0.4s ease
.code
	padding 14px 0 25px 20px
	background-color #ededed
	font-family 'PTMono'
	margin-bottom 32px
	color #202020
	ol
		counter-reset myCounter
		padding 0
		margin 0
		li
			position relative
			list-style none
			padding-left 32px
			&:nth-child(2n)
				margin-bottom 22px
			&:last-child
				margin-bottom 0px
			&:before
				counter-increment myCounter
				content counter(myCounter)
				color black
				display inline-block
				text-align center
				color #c4c4c4
				font-size 16px
				font-weight 600
				position absolute
				left 0
				top 2px
			span,code
				font-size 14px
				line-height 21px
				letter-spacing 0.4px
.s_link
	background-color #4af777
	color #043493
.copy
	margin-bottom 30px
	a
		position relative
		font-family 'openSansRegular'
		font-size 16px
		color #043493
		cursor pointer
.icon-Compiler_Icon
	width 35px
	height 25px
	margin 0 10px
	fill #043493
.tooltip
	display none
	position absolute
	right -20px
	bottom 4px
	height 16px
	width 16px
	background-image url("../img/icons/right.png")